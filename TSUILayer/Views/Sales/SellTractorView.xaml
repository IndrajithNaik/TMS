            <DataGrid.Columns>
                <!--<DataGridTextColumn Binding="{Binding TRACTOR_MODEL.SUPPLIER.SUPPLIER_NAME}" Header="Sl No." Width="35*" />-->
                <DataGridTextColumn Binding="{Binding CUSTOMER.CUSTOMER_NAME}" Header="Customer Name" Width="100*" />
